<!DOCTYPE html>
<html>
  <head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>Kipalink</title>
    <!-- CSS -->
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'jquery-autosize/jquery.autosize.min' %>
    <%= favicon_link_tag 'common/icon/favicon.ico' %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <header class="master-header">
      <div class="ui transparent inverted main menu page grid">
        <div class="sixteen wide right menu logo column header-container">
          <a class="pic" href="">
            <img class="ui image" src="<%= image_path('common/square_icon_transparent.png') %>">
          </a>
          <a class="name" href="/">Kipalink</a>
          <!-- Right -->
          <a class="item" href="<%= root_path %>">
            tin hay
          </a>
          <a class="item" href="<%= root_path %>">
            tin mới
          </a>
          <% if user_signed_in? %>
          <a class="item" href="<%= new_link_path %>">
            đăng tin
          </a>
          <a class="right item" href="">
            <%= current_user.name %>
          </a>
          <% else %>
          <a class="right item" href="<%= new_user_session_path %>">đăng nhập</a>
          <% end %>

        </div>
      </div>
    </header>

    <%= yield %>

  </body>
</html>
