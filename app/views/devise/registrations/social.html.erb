<% content_for :sub_styles do %>
  <link href='http://fonts.googleapis.com/css?family=Ubuntu:400,300,500,700' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag "signup" %>
<% end %>

<div class="ui page grid headline">
  <div class="center aligned column">
    <div class="ui small steps">
      <div class="ui disabled step">
        Đăng ký
      </div>
      <div class="ui active step">
        Xác nhận
      </div>
      <div class="ui disabled step">
        Chủ đề hot
      </div>
      <div class="ui disabled step">
        Người nổi tiếng
      </div>
    </div>
  </div>
</div>

<div class="ui page grid content">
  <div class="four wide column left-side"></div>
  <div class="eight wide column center-frame">
    <br>
    <h1 class="ui center aligned teal header logo">
      Kipalog
    </h1>
    <p class="ui center aligned basic segment">
      Chia sẻ và học hỏi kiến thức một cách dễ dàng hơn.
    </p>
    <!-- Main content -->

    <br>
    <%= form_for @user, :url => users_path, :method => :post, :html => {name: 'socialForm', :class => 'ui error form basic segment need-signup-validate', :id => 'confirm-form' } do |f|%>
      <%= hidden_field_tag :from, 'social' %>
      <!-- Social info -->
      <%= f.hidden_field :provider %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :uid %>
      <%= f.hidden_field :password %>
      <%= f.hidden_field :avatar_url %>
      <%= f.hidden_field :github_url %>
      <%= f.hidden_field :facebook_url %>
      <%= f.hidden_field :twitter_url %>
      <%= render partial: '/layouts/error', locals: {errors: @user.errors} %>
      <div class="ui large list social-info">
        <div class="item">
          <img class="ui avatar image" src="<%= f.object.avatar_url %>">
          <div class="content">
            <div class="header">
              <%= @user.name %>
            </div>
            <!-- Replace with user basic info if user came from Twitter Oauth -->
          </div>
        </div>
      </div>
      <!-- Username-->
      <div class="field">
        <%=  f.hidden_field :name, name: 'username' %>
      </div>
      <!-- Email -->
      <!-- Drop this div if user came from Twitter Oauth -->
      <!-- Any other hidden social value should be inside a div with class "filed" -->
      <!-- Twitter Email -->
      <div class="field">
      <!-- Include this div when user come from Twitter Oauth -->
        <div class="ui left labeled icon input <%=field(@user, :email)%>">
          <%= f.email_field :email, placeholder: 'Email' %>
          <i class="mail icon"></i>
        </div>
      </div>
      <!-- TOS -->
      <div class="inline field">
        <div class="ui checkbox">
          <input id="tos" type="checkbox">
          <label for="tos">
            Đồng ý với
            <%= link_to tos_path, :target => "_blank" do%>
              điều khoản sử dụng
            <% end %>
          </label>
        </div>
      </div>
      <!-- Submit -->
      <div class="ui fluid teal submit button">
        <i class="sign in icon"></i>
        Tham gia
      </div>
    <% end %>
  </div>
</div>
