<!DOCTYPE html>
<html>
<head>
  <!-- Standard Meta -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <!-- Site Properities -->
  <title>Đăng nhập</title>

  <meta property="og:title" content="Kipalog: Nơi tốt nhất để lưu giữ và chia sẻ kiến thức kỹ thuật." />
  <meta property="og:site_name" content="kipalog.com" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="http://kipalog.com" />
  <meta property="og:description" content="Kipalog (keep-a-log) giúp viết trở nên đơn giản, chia sẻ trở nên nhanh chóng và cộng đồng trở nên lớn mạnh." />
  <meta property="og:image" content="<%= image_url('common/fb.png') %>" />

  <%= favicon_link_tag 'common/icon/favicon.ico' %>

  <!-- CSS -->
  <link href='http://fonts.googleapis.com/css?family=Ubuntu:700,500,400' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag 'application' %>
  <%= stylesheet_link_tag 'signin' %>

  <!-- GA -->
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-53121223-2', 'auto');
    ga('send', 'pageview');

  </script>
  <!-- GA -->

</head>
<body>

  <!-- Header -->
  <header class="ui center aligned page grid">
    <nav class="head row">
      <div class="column top-info">
        <p class="logo item">
          <a href=""> KIPALOG</a>
        </p>
        <a class="ui inverted basic button" href="<%= root_path %>">
          <i class="small user icon"></i>
          Đăng ký
        </a>
      </div>
    </nav>
  </header>

  <!-- Main -->
  <main id="login">
    <div class="ui center aligned page grid login-appear">

      <!-- Big header -->
      <div class="row">
        <div class="column center-header">
          <h1 class="ui center aligned header logo">
            Kipalog
          </h1>
          <p class="ui center aligned header detail">
            Chia sẻ và học hỏi kiến thức một cách dễ dàng hơn.
          </p>
        </div>
      </div>

      <!-- Login -->
      <div class="row">
        <div class="column input-field">

          <!-- Login form -->
          <%= form_for(@resource, as: resource_name, url: session_path(resource_name), html: {class: "ui form"}) do |f| %>
            <div class="field">
              <div class="ui input">
                <%= f.email_field :email, id: 'email', placeholder: "Email" %>
              </div>
            </div>
            <div class="field">
              <div class="ui input">
                <%= f.password_field :password, autocomplete: "off", id: 'password', placeholder: "Password" %>
              </div>
            </div>
            <div class="field">
              <input class="ui green submit button" type="submit" id="signin" value="Đăng nhập"></input>
            </div>
          <%end%>

          <!-- Password reset -->
          <div class="password_reset">
            <a class="password-link" href=""> Quên password ? </a>
            <a class="smart-signup-link" href="<%= new_user_registration_path %>"> Đăng ký thành viên</a>
          </div>

        </div>
      </div>

      <!-- Divider -->
      <div class="row">
        <div class="column screen-divider">
          <div class="ui horizontal icon divider">
            <i class="circular angle down icon"></i>
          </div>
        </div>
      </div>

      <!-- Social segment -->
      <div class="row">
        <div class="column social-segment">
          <!-- facebook -->
          <%= link_to user_omniauth_authorize_path(:facebook), class: "ui facebook button" do %>
            <i class="small facebook icon"></i>
            facebook
          <% end %>
          <!-- twitter -->
          <%= link_to user_omniauth_authorize_path(:twitter), class: "ui twitter button" do %>
            <i class="twitter icon"></i>
            twitter
          <% end %>
          <!-- github-->
          <%= link_to user_omniauth_authorize_path(:github), class: "ui black button" do %>
            <i class="github icon"></i>
            github
          <% end %>
        </div>
      </div>

      <!-- Blank row -->
      <div class="row">
        <div class="column blank-column">
        </div>
      </div>

    </div>
  </main>

</body>
</html>
